package com.demo;

public class ClinicalString {

	public static void main(String[] args) {
		System.out.println((int)'a' + ":" + (int)'z');
		String str = "astorys";
		char[] array = str.toCharArray();
		clinicalIncrement(array);
	}

	private static void clinicalIncrement(char[] array) {
		int[] increment = new int[26];
		for (int i=0 ; i<array.length ; i++) {
			increment[array[i] - 97]++;
			System.out.println(increment[array[i] - 97]);
		}

		char[]result = new char[array.length];
		for(int i=(array.length-1) ; i>=0 ; i--) {
			char newChar = (char) (array[i] + (increment[array[i] - 97] - 1));
			newChar = (char) (newChar%122);
			result[i] = newChar;
			increment[array[i] - 97]--;
		}
		System.out.println(result);
	}

}
